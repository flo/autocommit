<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.fkoeberle.autocommit.message.factory" name="Commit Message Factory" schema="schema/de.fkoeberle.autocommit.message.factory.exsd"/>
   <extension-point id="de.fkoeberle.autocommit.message.profile" name="Commit Message Generation Profile" schema="schema/de.fkoeberle.autocommit.message.profile.exsd"/>
   <extension
         name="test"
         point="de.fkoeberle.autocommit.message.factory">
      <factory
            class="de.fkoeberle.autocommit.message.WorkedOnPathCMF"
            description="Provides a commit message for every kind of commit by telling the user in which file or directory has changed. If a single file got changed that file will be reported. If two files get changed the most specific folder will be reported that contains the changed files."
            id="de.fkoeberle.autocommit.message.WorkedOnPathCMF">
         <arguments>
            <argument
                  description="The changed path relative to the repository.">
            </argument>
         </arguments>
         <messages>
            <message
                  defaultValue="Worked on &quot;{0}&quot;"
                  fieldName="workedOn">
            </message>
         </messages>
      </factory>
   </extension>
   <extension
         point="de.fkoeberle.autocommit.message.profile">
      <profile
            id="de.fkoeberle.autocommit.message"
            name="Commit Messages About Changed Paths"
            path="default.commitmessages">
      </profile>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.fkoeberle.autocommit.message.ui.CMFMultiPageEditorPart"
            extensions="commitmessages"
            id="de.fkoeberle.autocommit.message.ui.CommitMessagesEditorPart"
            name="Commit Messages Editor">
      </editor>
   </extension>
</plugin>
